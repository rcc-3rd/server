version: '2'

services: 
  bus:
    container_name: bus
    build: .
    expose:
      - 8080
    environment:
      VIRTUAL_HOST: <your http host>
      VIRTUAL_PORT: 8080
      # if using https, please setting with your env
      # LETSENCRYPT_HOST: 
      # LETSENCRYPT_EMAIL: 
    volumes:
      - .:/bus
    networks:
      - bus_inner
    restart: always
    working_dir: /bus
    entrypoint: /bin/bash
    stdin_open: true
    tty: true

  postgres:
    container_name: postgres
    image: postgres
    expose:
      - 5432
    networks:
      - bus_inner
    environment:
      POSTGRES_PASSWORD: password

networks:
  bus_inner:
